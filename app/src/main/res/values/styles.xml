<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarStyle">
        <item name="windowActionBar">false</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/boogaloo_regular</item>
    </style>

    <style name="TextToTranslateStyle">
        <item name="android:textSize">@dimen/text_to_translate_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/body_text_color</item>
        <item name="android:fontFamily">@font/boogaloo_regular</item>
    </style>

    <style name="LanguageTextStyle">
        <item name="android:textSize">@dimen/language_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/slider_text_color</item>
        <item name="android:fontFamily">@font/boogaloo_regular</item>
    </style>

    <style name="TranslateButtonStyle">
        <item name="android:textSize">@dimen/language_text_size</item>
        <item name="android:textColor">@color/body_text_color</item>
        <item name="android:fontFamily">@font/boogaloo_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

</resources>