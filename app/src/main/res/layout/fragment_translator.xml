<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|fill_vertical"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.start.StartFragment">

    <TextView
        android:id="@+id/textView"
        style="@style/TextToTranslateStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:padding="12dp"
        android:text="@string/text_to_translate_placeholder" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal">

            <TextView
                android:id="@+id/textView2"
                style="@style/LanguageTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:text="@string/spanish_placeholder" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="63dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_to_right"
                android:contentDescription="@string/arrow_to_right" />

            <TextView
                android:id="@+id/textView3"
                style="@style/LanguageTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/polish_placeholder" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_to_left"
                android:contentDescription="@string/arrow_to_left"/>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/button"
        style="@style/TranslateButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F0C419"
        android:paddingVertical="8dp"
        android:text="@string/translate_button"
        app:cornerRadius="10dp" />

</LinearLayout>
